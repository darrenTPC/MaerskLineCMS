@page
@model MaerskLineCMS.Pages.Agent.IndexModel

@{
    ViewData["Title"] = "Agent Account";
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}

<h1>Agent Master Record</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Agent ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AGENT[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AGENT[0].Email)
            </th>
            <th>
                Sign-In ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AGENT) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Agent_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignIn_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Agent_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Agent_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Agent_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
