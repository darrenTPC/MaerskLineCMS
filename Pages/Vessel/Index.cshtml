@page
@model MaerskLineCMS.Pages.Vessel.IndexModel

@{
    ViewData["Title"] = "Vessel";
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
}

<h1>Vessel Master Record</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vessel ID
            </th>
            <th>
                Vessel Name
            </th>
            <th>
                Capacity TEU
            </th>
            <th>
                Available TEU
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VESSEL[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VESSEL) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vessel_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vessel_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity_TEU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available_TEU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Vessel_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Vessel_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Vessel_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
