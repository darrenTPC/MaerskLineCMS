@page
@model MaerskLineCMS.Pages.Customer.IndexModel

@{
    ViewData["Title"] = "Customer Account";
    Layout = "~/Pages/Shared/_Layout_Agent.cshtml";
}

<h1>Customer Master Record</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Customer ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUSTOMER[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUSTOMER[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUSTOMER[0].Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CUSTOMER) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Customer_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Customer_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Customer_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
