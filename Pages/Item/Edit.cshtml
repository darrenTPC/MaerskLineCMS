@page
@model MaerskLineCMS.Pages.Item.EditModel

@{
    ViewData["Title"] = "Edit Item";
    Layout = "~/Pages/Shared/_Layout_Agent.cshtml";
}

<h1>Edit</h1>

<h4>ITEM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ITEM.Item_ID" />
            <div class="form-group">
                <label asp-for="ITEM.Item_ID" class="control-label">Item ID</label>
                <input asp-for="ITEM.Item_ID" class="form-control" readonly/>
                <span asp-validation-for="ITEM.Item_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ITEM.Description" class="control-label"></label>
                <input asp-for="ITEM.Description" class="form-control" required/>
                <span asp-validation-for="ITEM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ITEM.Type" class="control-label"></label>
                <input asp-for="ITEM.Type" class="form-control" required/>
                <span asp-validation-for="ITEM.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ITEM.Booking_ID" class="control-label">Booking ID</label>
                <input asp-for="ITEM.Booking_ID" class="form-control" required/>
                <span asp-validation-for="ITEM.Booking_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
